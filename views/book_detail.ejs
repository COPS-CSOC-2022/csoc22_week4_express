<html>
  <%- include ("./partials/header.ejs") %>

  <body>
    <div class="container-fluid">
      <div class="row">
        <%- include ("./partials/sidebar.ejs") %>
        <div class="col-sm-10">
          <h2>Title: <%= book.title %></h2>

          <dl>
            <dt>Genre:</dt>
            <dd><%= book.genre %></dd>
            <dt>Author:</dt>
            <dd><%= book.author %></dd>
            <dt>Description:</dt>
            <dd><%= book.description %></dd>
            <dt>Rating:</dt>
            <dd><%= book.rating %></dd>
            <dt>MRP:</dt>
            <dd>Rs. <%= book.mrp %></dd>
            <dt>Available Copies:</dt>
            <dd><%= num_available %></dd>
          </dl>
          <% if (currentUser){ %>
            <form action="/books/issue" method="POST">
              <input type="text" hidden value="<%= book.id %>" name="bid" />
              <% if(num_available != 0) { %>
                <button class="btn btn-primary" id="loan-button" type="submit">
                  Loan <%= book.title %>
                </button>
              <% } %>
            </form>
          <% } else { %>
            <h5><b> Login to Loan book </b></h5>
          <% } %>
        </div>
      </div>
    </div>
  </body>
</html>
