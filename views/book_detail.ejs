<html>
  <%- include ("./partials/header.ejs") %> <% layout('layouts/boilerplate')%>

  <body>
    <div class="container-fluid">
      <div class="row">
        <div class="col-sm-12">
          <h2><u><%= book.title %></u></h2>
          <dl>
            <dt><u>Genre:</u></dt>
            <dd><%= book.genre %></dd>
            <dt><u>Author:</u></dt>
            <dd><%= book.author %></dd>
            <dt><u>Description:</u></dt>
            <dd><%= book.description %></dd>
            <dt><u>Rating:</u></dt>
            <dd><%= book.rating %></dd>
            <dt><u>MRP:</u></dt>
            <dd><%= book.mrp %>$</dd>
            <dt><u>Available Copies:</u></dt>
            <dd><%= book.available_copies %></dd>
          </dl>
          <form action="/books/issue" method="POST">
            <input type="text" hidden value="<%= book.id %>" name="bid" />
            <button class="btn btn-primary" id="loan-button" type="submit">
              Loan " <u><%= book.title %> </u>"
            </button>
          </form>
        </div>
      </div>
    </div>
  </body>
</html>
