<html>
  <%- include ("./partials/header.ejs") %>

  <body class="py-4">
    <div class="container-fluid">
      <div class="row">
        <%- include ("./partials/sidebar.ejs") %>
        <div class="col-sm-10">
          <h2>Title: <%= book.title %></h2>

          <dl>
            <dt>Genre:</dt>
            <dd><%= book.genre %></dd>
            <dt>Author:</dt>
            <dd><%= book.author %></dd>
            <dt>Description:</dt>
            <dd><%= book.description %></dd>
            <dt>Rating:</dt>
            <dd><%= book.rating %></dd>
            <dt>MRP:</dt>
            <dd>Rs. <%= book.mrp %></dd>
            <dt>Available Copies:</dt>
            <dd><%= book.available_copies %></dd>
          </dl>
          <form action="/books/issue" method="POST">
            <input type="text" hidden value="<%= book.id %>" name="bid" />
            <% if(book.available_copies > 0){ %>
            <button class="btn btn-primary" id="loan-button" type="submit">
              Loan <%= book.title %>
            </button>
            <% } else{ %>
            <button
              class="btn btn-primary"
              id="loan-button"
              type="submit"
              disabled
            >
              Loan <%= book.title %>
            </button>
            <% } %>
          </form>
        </div>
      </div>
    </div>
  </body>
</html>
