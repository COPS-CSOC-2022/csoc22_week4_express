<html>
  <%- include ("./partials/header.ejs", {title: "Book Detail"}) %>
  <body>
    <%- include ("./partials/sidebar.ejs") %>
    <div class="container-fluid">
      <div class="row">
        <div class="col-sm-10">
          <h2>Title: <%= book.title %></h2>

          <dl>
            <dt>Genre:</dt>
            <dd><%= book.genre %></dd>
            <dt>Author:</dt>
            <dd><%= book.author %></dd>
            <dt>Description:</dt>
            <dd><%= book.description %></dd>
            <dt>Rating:</dt>
            <dd><%= book.rating %></dd>
            <dt>MRP:</dt>
            <dd>Rs. <%= book.mrp %></dd>
            <dt>Available Copies:</dt>
            <dd><%= num_available %></dd>
          </dl>
          <form action="/books/issue" method="POST">
            <input type="text" hidden value="<%= book.id %>" name="bid" />
            <button class="btn btn-primary" id="loan-button" type="submit" <%= num_available === 0 ? "disabled" : ""%>>
              Loan <%= book.title %>
            </button>
          </form>
        </div>
      </div>
    </div>
  </body>
</html>
