<html>
  <%- include ("./partials/header.ejs") %>
  <body>
    <h3 class="p-4">Loaned Books list</h3>

    <table class="table m-4">
      <thead>
        <tr>
          <th scope="col">#</th>
          <th scope="col">Title</th>
          <th scope="col">Author</th>
          <th scope="col">Genre</th>
          <th scope="col">Borrow Date</th>
          <th scope="col">Return Buttons</th>
        </tr>
      </thead>
      <tbody>
        <% books.forEach(function(copy,i){%>
        <tr>
          <th scope="row"><%= i %></th>
          <td><a href="/book/<%=copy.book.id%>/"><%= copy.book.title %></a></td>
          <td><%= copy.book.author %></td>
          <td><%= copy.book.genre %></td>
          <td><%= copy.borrow_date %></td>
          <td>
            <form action="/books/return" method="POST">
              <input type="text" hidden value="<%= copy._id %>" name="bid" />
              <button class="btn btn-primary" id="return-button" type="submit">
                Return
              </button>
            </form>
          </td>
        </tr>
        <%})%>
      </tbody>
    </table>
  </body>
</html>
