<html>
  <%- include ("./partials/header.ejs") %>
  <body>
    <h3>Loaned Books list</h3>
    <div class="row">
      <%- include ("./partials/sidebar.ejs") %>
    </div>
    <table class="table">
      <thead>
        <tr>
          <th scope="col">#</th>
          <th scope="col">Title</th>
          <th scope="col">Author</th>
          <th scope="col">Genre</th>
          <th scope="col">Borrow Date</th>
          <th scope="col">Return Buttons</th>
        </tr>
      </thead>
      <tbody>
        <% books.forEach(function(copy,i){%>
        <tr>
          <th scope="row"><%= i %></th>
          <td><a href="/book/<%=copy.book.id%>/"><%= copy.book.title %></a></td>
          <td><%= copy.book.author %></td>
          <td><%= copy.book.genre %></td>
          <td><%= copy.borrow_data %></td>
          <td>
            <!-- TODO: Create a Return book tag that is used for returning the book -->
            <form action="/books/return" method="POST">
              <input type="text" hidden value="<%= copy.book.id %>" name="bid" />
              <input type="text" hidden value="<%= copy.borrow_data %>" name="b_date" />
              <button class="btn btn-primary" id="return-button" type="submit">
                Return Copy
              </button>
            </form>
          </td>
        </tr>
        <%})%>
      </tbody>
    </table>
  </body>
</html>
