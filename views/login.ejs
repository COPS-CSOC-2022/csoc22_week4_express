<!DOCTYPE html>
<html lang="en">
    <%- include("./partials/header") %>
<body>
  <%- include ("./partials/sidebar.ejs") %>
    <div class="row mt-5">
        <div class="col-md-6 m-auto">
          <div class="card card-body text-white bg-dark mb-3" style="font-size:1.3rem;">
            <h1 class="text-center mb-3"><i class="fas fa-sign-in-alt"></i>  Login</h1>
            <%- include ("./partials/messages") %>
            <form action="/login" method="POST">
              <div class="form-group">
                <label for="email">Email</label>
                <input
                  type="email"
                  id="email"
                  name="email"
                  class="form-control"
                  placeholder="Enter Email"
                />
              </div>
              <div class="form-group">
                <label for="password">Password</label>
                <input
                  type="password"
                  id="password"
                  name="password"
                  class="form-control"
                  placeholder="Enter Password"
                />
              </div>
              <button type="submit" class="btn btn-light btn-block" style="font-size:1.3rem;">Login</button>
            </form>
            <p class="lead mt-4">
               Account Does Not Exist then Click on <a href="/register" style="color:white;">Register</a>
            </p>
          </div>
        </div>
      </div>
      
      <%- include("./partials/footer") %>

</body>
</html>